{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@common/universal/*": ["packages/common/universal/src/*"],
			"@common/backend/*": ["packages/common/backend/src/*"]
		},
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
